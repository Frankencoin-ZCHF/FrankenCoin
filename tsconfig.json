{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "declaration": true,
        "target": "es2018",
        "module": "commonjs",
        "allowJs": true,
        "strict": true,
        "noImplicitAny": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "sourceMap": true
    },
    "include": [
        "./hardhat.config.ts",
        "src/**/*.ts",
        "./scripts/**/*.ts",
        "./test"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}